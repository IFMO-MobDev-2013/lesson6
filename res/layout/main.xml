<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="0"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter RSS URL:"
                android:id="@+id/label" android:layout_column="0" android:layout_weight="2"
                android:layout_gravity="bottom" android:textSize="17dp" android:textIsSelectable="false"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List"
                android:id="@+id/butListRSS"
                android:padding="0dp" android:maxHeight="20dp"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_weight="0">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:text="http://ifmo.ru/module/rss.php"
                android:id="@+id/rssURL" android:singleLine="true" android:layout_column="0"
                android:layout_weight="1" android:textColor="#000000"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FetchRSS"
                android:id="@+id/fetchRss" android:layout_weight="0"
                />
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress" android:indeterminate="false"
                style="@android:style/Widget.ProgressBar.Horizontal"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="2">
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/rssListView" android:layout_column="0"/>
    </TableRow>
</TableLayout>

