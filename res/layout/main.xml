<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
        <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="Поток:"
                android:id="@+id/textView" android:textSize="15dp" android:layout_weight="0"
                android:layout_gravity="center" android:gravity="center"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/linkText" android:layout_gravity="center"
                android:gravity="center|left" android:singleLine="true" android:editable="true"
                android:layout_weight="50"/>
        <Button
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="Load"
                android:id="@+id/button" android:layout_gravity="right" android:layout_weight="1"
                android:onClick="onClick"/>
        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar" android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
    </LinearLayout>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"/>
</LinearLayout>

