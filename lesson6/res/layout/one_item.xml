<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="10">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/title" android:layout_weight="80" android:hint="title" android:singleLine="false"
                android:textColor="#09d237" android:textSize="20dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/date" android:layout_weight="20" android:hint="date"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="10">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/link" android:singleLine="true" android:hint="link" android:layout_weight="75"/>
        <CheckBox
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/checkBox" android:layout_weight="25" android:text="like"/>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/description" android:hint="description" android:layout_weight="80"
            android:scrollbars = "vertical"
            android:maxLines = "10"
            android:textSize="30dp"/>
</LinearLayout>